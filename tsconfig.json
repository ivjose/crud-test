{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@context/*": ["src/context/*"],
      "@hooks": ["src/hooks"],
      "@lib/*": ["src/lib/*"],
      "@modules/*": ["src/modules/*"],
      "@schema/*": ["src/schema/*"],
      "@styles/*": ["src/styles/*"],
      "@types": ["src/types/index"],
      "@test-utils": ["src/test-utils/*"]
    }
  },
  "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.test.ts", "**/*.test.tsx"],
  "exclude": ["node_modules"]
}
